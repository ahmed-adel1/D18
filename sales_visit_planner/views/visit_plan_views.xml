<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_visit_plan_tree" model="ir.ui.view">
            <field name="name">visit.plan.list</field>
            <field name="model">visit.plan</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="salesperson_id"/>
                    <field name="visit_date"/>
                    <field name="purpose"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_visit_plan_form" model="ir.ui.view">
            <field name="name">visit.plan.form</field>
            <field name="model">visit.plan</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Visit Plan">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,scheduled,done,cancel"/>
                        <button name="action_schedule" string="Schedule" type="object" class="btn-primary"/>
                        <button name="action_done" string="Done" type="object" class="btn-success"/>
                        <button name="action_set_draft" string="Set to Draft" type="object" class="btn-secondary"/>
                        <button name="action_cancel"
                                string="Cancel"
                                type="object"
                                class="btn-danger"
                                invisible="state != 'done'"/>
                    </header>
                    <sheet>
                        <div class="o_row">
                            <field name="name" class="oe_title" style="width: 100%;"/>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="salesperson_id"/>
                                <field name="visit_date"/>
                                <field name="purpose"/>
                                <field name="lead_id"/>
                            </group>
                            <group>
                                <field name="notes"/>
                                <field name="duration_planned"/>
                                <field name="duration_effective"/>
                                <field name="visit_outcome"/>
                                <field name="next_step"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_visit_plan_search" model="ir.ui.view">
            <field name="name">visit.plan.search</field>
            <field name="model">visit.plan</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="salesperson_id"/>
                    <field name="partner_id"/>
                    <filter string="Draft" name="filter_draft" domain="[('state','=','draft')]"/>
                    <filter string="Scheduled" name="filter_scheduled" domain="[('state','=','scheduled')]"/>
                    <filter string="Done" name="filter_done" domain="[('state','=','done')]"/>
                    <filter string="Cancelled" name="filter_cancel" domain="[('state','=','cancel')]"/>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_visit_plan_kanban" model="ir.ui.view">
            <field name="name">visit.plan.kanban</field>
            <field name="model">visit.plan</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="state"/>
                    <field name="is_overdue"/>
                    <field name="partner_id"/>
                    <field name="salesperson_id"/>
                    <field name="visit_date"/>
                    <field name="purpose"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="partner_id"/>
                                    <field name="salesperson_id"/>
                                </div>
                                <div>
                                    <field name="visit_date"/>
                                    <field name="purpose"/>
                                </div>
                                <div t-if="record.is_overdue.raw_value" style="color:red; font-weight:bold;">
                                    Overdue!
                                </div>
                                <div>
                                    <field name="state"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Calendar View -->
        <record id="view_visit_plan_calendar" model="ir.ui.view">
            <field name="name">visit.plan.calendar</field>
            <field name="model">visit.plan</field>
            <field name="arch" type="xml">
                <calendar string="Visit Calendar" date_start="visit_date" color="salesperson_id" mode="day">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="duration_planned"/>
                </calendar>
            </field>
        </record>

        <menuitem id="menu_visit_plan"
                  name="Visit Plans"
                  parent="menu_sales_visit_root"
                  action="action_visit_plan"/>
    </data>
</odoo>
