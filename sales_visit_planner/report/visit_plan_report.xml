<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Server Action لطباعة Visit Plan PDF -->
        <record id="server_action_print_visit_plan" model="ir.actions.server">
            <field name="name">Print Visit Plan</field>
            <field name="model_id" ref="model_visit_plan"/>
            <field name="binding_model_id" ref="model_visit_plan"/>
            <field name="binding_view_types">list,form</field> <!-- هيظهر في list و form view -->
            <field name="state">code</field>
            <field name="code"><![CDATA[
action = env.ref('sales_visit_planner.action_report_visit_plan').report_action(records)
            ]]></field>
        </record>

        <!-- تعريف تقرير QWeb PDF -->
        <record id="action_report_visit_plan" model="ir.actions.report">
            <field name="name">Visit Plan Report</field>
            <field name="model">visit.plan</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sales_visit_planner.report_visit_plan_document</field>
            <field name="report_file">sales_visit_planner.report_visit_plan_document</field>
            <field name="print_report_name">'Visit_Plan_%s' % (object.name)</field>
        </record>

    </data>
</odoo>

