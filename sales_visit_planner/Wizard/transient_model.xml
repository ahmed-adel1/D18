<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_reset_draft_wizard_form" model="ir.ui.view">
            <field name="name">reset.draft.wizard.form</field>
            <field name="model">reset.draft.wizard</field>
            <field name="arch" type="xml">
                <form string="Reason to Reset">
                    <group>
                        <field name="reason" placeholder="اكتب سبب الرجوع من Done إلى Draft"/>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>