<odoo>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form create="1" delete="1" edit="1">
                <header>
                    <button name="action_print_new_appointment"
                            string="Print New Appointment"
                            type="object"
                    />

                    <field name="state" widget="statusbar" nolabel="1"/>

                </header>

                <sheet string="Appointment">
                    <group>
                        <field name="name"/>
                        <field name="patient_id"/>
<!--                        <field name="medicine_ids" widget="many2many_tags"/>-->
                        <field name="appointment_date"/>
                    </group>


                    <notebook>
                        <page string="Appointment Medicines" name="medicines">
                            <field name="line_ids">
                                <list string="Medicines" editable="top">
                                    <field name="medicine_id"/>
                                    <field name="dose"/>
                                    <!--                                <field name="odoo_location_id"/>-->
                                </list>
                            </field>
                        </page>
                        <page string="Appointment Notes" name="notes">
                            <group>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>


                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!--   **************************** list view *********************-->

    <record id="view_hospital_appointment_list"
            model="ir.ui.view">
        <field name="name">hospital.appointment.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list create="1" delete="1" edit="1" export_xlsx="1"
                  sample="0">
                <field name="name"/>
                <field name="patient_name"/>
                <field name="appointment_date"/>
            </list>
        </field>
    </record>
    <!--    ********************************************** action ******************-->
    <record id="action_hospital_appointment_views"
            model="ir.actions.act_window">
        <field name="name">Cleopatra Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first appointments !
            </p>
        </field>
    </record>
    <!--    ********************** menu ****************************-->


</odoo>