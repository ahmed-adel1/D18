<odoo>

    <record id="view_hospital_tag_form" model="ir.ui.view">
        <field name="name">hospital.patient.tag.form</field>
        <field name="model">hospital.patient.tag</field>
        <field name="arch" type="xml">
            <form create="1" delete="1" edit="1">

                <sheet string="tag">
                    <group>
                        <field name="name"/>
                        <field name="color"/>
                    </group>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!--   **************************** list view *********************-->

    <record id="view_hospital_tag_list"
            model="ir.ui.view">
        <field name="name">hospital.patient.tag.list</field>
        <field name="model">hospital.patient.tag</field>
        <field name="arch" type="xml">
            <list create="1" delete="1" edit="1" export_xlsx="1"
                  sample="0">
                <field name="name"/>
                <field name="color"/>
            </list>
        </field>
    </record>
    <!--    ********************************************** action ******************-->
    <record id="action_hospital_patient_tag_views"
            model="ir.actions.act_window">
        <field name="name">Patient Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient.tag</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first tags !
            </p>
        </field>
    </record>
    <!--    ********************** menu ****************************-->


</odoo>