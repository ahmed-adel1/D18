<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit_delivery" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.delivery</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="x_delivery_deadline"/>
                <!--                <field name="x_sales_coordinator_id" />-->
                <field name="x_sales_coordinator_id"
                       groups="sales_team.group_sale_salesman,sales_team.group_sale_manager"
                       modifiers="{'readonly': [('state', '!=', 'draft')]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_list_inherit_delivery" model="ir.ui.view">
        <field name="name">sale.order.list.inherit.delivery</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="x_delivery_deadline"/>
                <field name="x_sales_coordinator_id"/>
            </xpath>
        </field>
    </record>
</odoo>
